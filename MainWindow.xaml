<Window x:Class="StudentFlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentFlight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Margin="0,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Height="29" FontSize="14" FontStyle="Normal"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Width="76" Height="23" Background="#FFA3B3E6" FontSize="14" Click="Login_Click" Loaded="Login_Loaded"/>
        <Label Content="username:" HorizontalAlignment="Left" Margin="245,129,0,0" VerticalAlignment="Top" Height="29" Width="86" FontSize="16"/>
        <Label Content="password:" HorizontalAlignment="Left" Margin="245,176,0,0" VerticalAlignment="Top" Height="29" Width="86" FontSize="16"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,176,0,0" VerticalAlignment="Top" Width="128" Height="24"/>
    </Grid>
</Window>
